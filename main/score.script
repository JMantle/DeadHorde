function init(self)
	self.score = 0
end

function on_message(self, message_id, message, sender)
	if message_id == hash("zombieKilled") then
		self.score = self.score + 100
		label.set_text("#label", "Score: ".. self.score )
	end
	if message_id == hash("endGame") then
		msg.post("main:/controller", "newScore", { score = self.score })
	end
end
